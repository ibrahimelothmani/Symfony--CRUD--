{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ produit.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ produit.color }}</td>
            </tr>
            <tr>
                <th>DateOfCreation</th>
                <td>{{ produit.dateOfCreation ? produit.dateOfCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>SerialNumber</th>
                <td>{{ produit.serialNumber }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ produit.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">back to list</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
