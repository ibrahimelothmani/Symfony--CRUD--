{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Description</th>
                <th>Color</th>
                <th>DateOfCreation</th>
                <th>SerialNumber</th>
                <th>Price</th>
                <th>Categories</th>
                <th>Modification</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.label }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.color }}</td>
                <td>{{ produit.dateOfCreation ? produit.dateOfCreation|date('Y-m-d') : '' }}</td>
                <td>{{ produit.serialNumber }}</td>
                <td>{{ produit.price }}</td>
                <td>{{ produit.categories }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
