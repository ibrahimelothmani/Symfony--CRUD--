						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a class="nav-link text-bg-danger border border-2 rounded-3 ms-2" href="{{ path('app_logout') }}">Logout</a>
							</li>
						</ul>
					{% endif %}


				</div>
			</div>
